{
	"xtype": "panel",
	"border": true,
	"cls": "signin-panel",
	// draggable: true,
	"width": 460,
	"height": 325,
	"padding": "0px 5px",
	"bodyStyle": {
		"borderStyle": "none"
	},
	"items": [
	{
		"xtype": "component",
		"html": xcp.appContext.name,
		"cls": "signin-title",
		"padding": "5px 0"
	},
	{		
		"xtype": "panel",
		"border": false,
		"cls": "signin-logo-panel",
		"width": "100%",
		"height": 50
	},
	{
		"xtype": "panel",
		"border": false,
		"cls": "signin-form-panel", 
		"width": "100%",
		"height": 248,
		"border": true,
		"bodyStyle": {
				"border-style": "none"
			},
		"items": [
		{
			"xtype": "form",
			"cls": "signin-form",
			width: "100%",
			height: 248,
			"defaults": {"anchor": "100%"},
			"defaultType": "textfield",
			"monitorValid": true,
			"border": false,
			"bodyBorder": true,
			"bodyStyle": {
				"padding": "80px 30px 0px"
			},
			"items":[
			{
				"fieldLabel": xcp.Strings.util.SignInUtil.userName,
				labelWidth: 120,
				"name": "j_username",
				"id": "j_username",
				"allowBlank": false
			},
			{
				"fieldLabel": xcp.Strings.util.SignInUtil.password,
				labelWidth: 120,
				"name": "j_password",
				"id": "j_password",
				"inputType": "password",
				"allowBlank": false
			}],
			"buttons":[
			{
				"id": "signin-btn",
                "cls": "xcp_button-cls",
				"text": xcp.Strings.util.SignInUtil.submitButton,
				"formBind": true,
				"handler": xcp.util.SignInUtil.signIn,
				"dock": 'bottom'
			}]
		}]
	}]
}